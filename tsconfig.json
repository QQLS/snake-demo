{
    "compilerOptions": {
        "module": "ES2015",
        "target": "ES2015",
        // 是否开启严格模式
        "strict": true,
        // 要输出到的文件夹
        "outDir": "dist",
        // 出现错误不要编译
        "noEmitOnError": true
    },
    // 使用 ts 进行编译的文件
    "include": [
        "./src/**/*"
    ],
    // 排除使用 ts 进行编译的文件
    "exclude": ["node_modules"]
}